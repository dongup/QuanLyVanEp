<div class="modal fade" id="modal-category-edit">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h4 class="modal-title">Cập nhật nhóm sản phẩm</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="text-white">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Tên nhóm sản phẩm</label>
                    <input id="ipt-category-edit-name" class="form-control" placeholder="Nhập tên nhóm sản phẩm" />
                </div>
                <div class="form-group">
                    <label>Nhà cung cấp</label>
                    <input id="ipt-category-edit-supplier" class="form-control" placeholder="Nhập nhà cung cấp" />
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btn-update-category">Cập nhật</button>
            </div>
        </div>
    </div>
</div>